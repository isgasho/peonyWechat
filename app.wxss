/**app.wxss**/
@import 'static/plugins/weui/weui.wxss';
@import 'static/plugins/iconfont/iconfont.wxss';

page {
  background-color: #f8f8f8;
  font-size: 30rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  width: 100%;
  height: 100%;
}

.page__hd {
  padding: 0;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: center;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: center;
  font-size: 14px;
}

.green{
  color: #00a65a;
}

.bule{
  color: #479DE6;
}

.yellow{
  color: #FEC300;
}

.purple{
  color: #605ca8;
}

.light-bule{
  color: #00c0ef;
}

.red{
  color: #DD4B39;
}

.teal{
  color: #39CCCC;
}

