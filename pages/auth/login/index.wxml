<view class="container">
  <view class="login-icon">
    <image class="login-img" src="/static/images/login-icon.png"></image>
  </view>

  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <i class="iconfont icon-tab_user" style="font-size:50rpx;"></i>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="bindUsernameInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <i class="iconfont icon-mima" style="font-size:40rpx;"></i>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="bindPasswordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
  </view>
  
</view>